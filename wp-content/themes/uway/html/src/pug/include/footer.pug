                            li
                                input(type="text" placeholder="Your email address")
                        .gform_footer
                            input(type="submit", value="SUBMIT")
            .row
                .col-md-4.col-6
                    ul.list-menu-footer
                        li(class=active=="home" ? "current-menu-item" : "")
