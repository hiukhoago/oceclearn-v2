                    ul.list-menu-footer
                        li(class=active=="stockists" ? "current-menu-item" : "")
                            a(href="#") Stockists
                        li(class=active=="blog" ? "current-menu-item" : "")
                            a(href="#") Blog
                        li(class=active=="my-account" ? "current-menu-item" : "")
                            a(href="#") My account
                .col-md-4.col-6
                    ul.list-menu-footer
                        li(class=active=="privacy-policy" ? "current-menu-item" : "")
                            a(href="#") Privacy Policy
                        li(class=active=="delivery" ? "current-menu-item" : "")
                            a(href="#") Delivery, Refund and Returns
            .img-animation
                .item   
                    img(src="upload/img-footer-1.png", alt="")
